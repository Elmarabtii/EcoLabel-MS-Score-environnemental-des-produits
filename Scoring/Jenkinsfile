pipeline {
    agent any
    
    environment {
        SONAR_HOST_URL = 'http://sonarqube:9000'
        SONAR_TOKEN = credentials('sonar-token')
        IMAGE_NAME = 'ecolabel-scoring'
        PYTHON_VERSION = '3.11'
        SERVICE_DIR = 'Scoring'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Install Dependencies') {
            agent {
                docker {
                    image 'python:3.11-slim'
                    reuseNode true
                }
            }
            steps {
                dir(SERVICE_DIR) {
                    sh '''
                        python -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip --quiet
                        pip install -r requirements.txt --quiet
                        pip install pytest pytest-cov pylint black flake8 --quiet || true
                    '''
                }
            }
        }
        
        stage('Lint') {
            agent {
                docker {
                    image 'python:3.11-slim'
                    reuseNode true
                }
            }
            steps {
                dir(SERVICE_DIR) {
                    sh '''
                        python -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip --quiet
                        pip install -r requirements.txt --quiet
                        pip install pylint flake8 --quiet || true
                        pylint app/ --exit-zero --output-format=text > pylint-report.txt || true
                        mkdir -p flake8-report || true
                        flake8 app/ --max-line-length=120 --format=html --html=flake8-report/index.html || true
                    '''
                }
            }
            post {
                always {
                    publishHTML([
                        reportDir: "${SERVICE_DIR}/flake8-report",
                        reportFiles: 'index.html',
                        reportName: 'Flake8 Report',
                        keepAll: true,
                        alwaysLinkToLastBuild: true,
                        allowMissing: true
                    ])
                }
            }
        }
        
        stage('Tests') {
            agent {
                docker {
                    image 'python:3.11-slim'
                    reuseNode true
                }
            }
            steps {
                dir(SERVICE_DIR) {
                    sh '''
                        python -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip --quiet
                        pip install -r requirements.txt --quiet
                        pip install pytest pytest-cov --quiet || true
                        pytest tests/ --cov=app --cov-report=xml --cov-report=html --cov-report=term || true
                    '''
                }
            }
            post {
                always {
                    publishHTML([
                        reportDir: "${SERVICE_DIR}/htmlcov",
                        reportFiles: 'index.html',
                        reportName: 'Coverage Report',
                        keepAll: true,
                        alwaysLinkToLastBuild: true,
                        allowMissing: true
                    ])
                }
            }
        }
        
        stage('SonarQube Analysis') {
            agent {
                docker {
                    image 'sonarsource/sonar-scanner-cli:latest'
                    reuseNode true
                }
            }
            steps {
                dir(SERVICE_DIR) {
                    script {
                        withSonarQubeEnv('SonarQube') {
                            sh '''
                                sonar-scanner \
                                    -Dsonar.projectKey=scoring \
                                    -Dsonar.projectName=Scoring \
                                    -Dsonar.sources=app \
                                    -Dsonar.host.url=http://sonarqube:9000 \
                                    -Dsonar.login=${SONAR_TOKEN} \
                                    -Dsonar.python.version=${PYTHON_VERSION} \
                                    -Dsonar.coverage.exclusions=**/tests/**,**/__pycache__/** \
                                    -Dsonar.python.coverage.reportPaths=coverage.xml || true
                            '''
                        }
                    }
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                dir(SERVICE_DIR) {
                    script {
                        sh '''
                            docker build -t ${IMAGE_NAME}:${BUILD_NUMBER} .
                            docker tag ${IMAGE_NAME}:${BUILD_NUMBER} ${IMAGE_NAME}:latest
                        '''
                    }
                }
            }
        }
        
        stage('Quality Gate') {
            steps {
                script {
                    timeout(time: 5, unit: 'MINUTES') {
                        waitForQualityGate abortPipeline: false
                    }
                }
            }
        }
    }
    
    post {
        always {
            cleanWs()
        }
        success {
            echo 'Pipeline Scoring réussi! ✅'
        }
        failure {
            echo 'Pipeline Scoring échoué! ❌'
        }
    }
}

