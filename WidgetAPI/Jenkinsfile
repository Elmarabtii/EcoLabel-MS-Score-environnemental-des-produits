pipeline {
    agent any
    
    environment {
        SONAR_HOST_URL = 'http://sonarqube:9000'
        SONAR_TOKEN = credentials('sonar-token')
        IMAGE_NAME = 'ecolabel-widget-api'
        PYTHON_VERSION = '3.11'
        SERVICE_DIR = 'WidgetAPI'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Install Dependencies') {
            agent {
                docker {
                    image 'python:3.11-slim'
                    reuseNode true
                }
            }
            steps {
                dir(SERVICE_DIR) {
                    sh '''
                        python -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip --quiet
                        pip install -r requirements.txt --quiet
                    '''
                }
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                dir(SERVICE_DIR) {
                    script {
                        withSonarQubeEnv('SonarQube') {
                            sh '''
                                JENKINS_CONTAINER_ID=$(cat /etc/hostname)
                                docker run --rm \
                                    --network ecolabel-ms-score-environnemental-des-produits_ecolabel-network \
                                    --volumes-from ${JENKINS_CONTAINER_ID} \
                                    --user root \
                                    -w $(pwd) \
                                    -e SONAR_HOST_URL=http://sonarqube:9000 \
                                    -e SONAR_TOKEN=${SONAR_TOKEN} \
                                    sonarsource/sonar-scanner-cli:latest \
                                    sh -c 'mkdir -p .scannerwork && chmod 777 .scannerwork && sonar-scanner \
                                        -Dsonar.projectKey=widget-api \
                                        -Dsonar.projectName=Widget-API \
                                        -Dsonar.sources=app \
                                        -Dsonar.host.url=http://sonarqube:9000 \
                                        -Dsonar.login=${SONAR_TOKEN} \
                                        -Dsonar.python.version=${PYTHON_VERSION} \
                                        -Dsonar.coverage.exclusions=**/tests/**,**/__pycache__/** \
                                        -Dsonar.python.coverage.reportPaths=coverage.xml' || true
                            '''
                        }
                    }
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                dir(SERVICE_DIR) {
                    script {
                        sh '''
                            docker build -t ${IMAGE_NAME}:${BUILD_NUMBER} .
                            docker tag ${IMAGE_NAME}:${BUILD_NUMBER} ${IMAGE_NAME}:latest
                        '''
                    }
                }
            }
        }
        
        stage('Quality Gate') {
            steps {
                script {
                    timeout(time: 5, unit: 'MINUTES') {
                        waitForQualityGate abortPipeline: false
                    }
                }
            }
        }
    }
    
    post {
        always {
            cleanWs()
        }
        success {
            echo 'Pipeline Widget-API réussi! ✅'
        }
        failure {
            echo 'Pipeline Widget-API échoué! ❌'
        }
    }
}

