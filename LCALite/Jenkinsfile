pipeline {
    agent any
    
    environment {
        SONAR_HOST_URL = 'http://sonarqube:9000'
        SONAR_HOST_URL_EXTERNAL = 'http://localhost:9002'
        SONAR_TOKEN = credentials('sonar-token')
        IMAGE_NAME = 'ecolabel-lca-lite'
        PYTHON_VERSION = '3.11'
        SERVICE_DIR = 'LCALite'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Install Dependencies') {
            agent {
                docker {
                    image 'python:3.11-slim'
                    reuseNode true
                }
            }
            steps {
                dir(SERVICE_DIR) {
                    sh '''
                        python -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip --quiet
                        pip install -r requirements.txt --quiet
                    '''
                }
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                dir(SERVICE_DIR) {
                    script {
                        withSonarQubeEnv('SonarQube') {
                            sh '''
                                CURRENT_DIR=$(pwd)
                                echo "Current directory: ${CURRENT_DIR}"
                                echo "Files in current directory:"
                                ls -la
                                echo "Checking app directory:"
                                ls -la app/ || echo "app directory not found"
                                echo ""
                                echo "Creating .scannerwork directory with proper permissions..."
                                # Create .scannerwork directory from Jenkins host with proper permissions
                                mkdir -p .scannerwork
                                chmod 777 .scannerwork
                                echo "Running SonarQube Analysis..."
                                JENKINS_CONTAINER_ID=$(cat /etc/hostname)
                                docker run --rm \
                                    --network ecolabel-ms-score-environnemental-des-produits_ecolabel-network \
                                    --volumes-from ${JENKINS_CONTAINER_ID} \
                                    --user root \
                                    -w ${CURRENT_DIR} \
                                    -e SONAR_HOST_URL=http://sonarqube:9000 \
                                    -e SONAR_TOKEN=${SONAR_TOKEN} \
                                    sonarsource/sonar-scanner-cli:latest \
                                    sh -c 'chown -R root:root .scannerwork 2>/dev/null || true && chmod -R 777 .scannerwork && sonar-scanner \
                                        -Dsonar.projectKey=lca-lite \
                                        -Dsonar.projectName=LCA-Lite \
                                        -Dsonar.sources=app \
                                        -Dsonar.host.url=http://sonarqube:9000 \
                                        -Dsonar.python.version=${PYTHON_VERSION} \
                                        -Dsonar.coverage.exclusions=**/tests/**,**/__pycache__/** \
                                        -Dsonar.python.coverage.reportPaths=coverage.xml' || true
                            '''
                        }
                    }
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                dir(SERVICE_DIR) {
                    script {
                        sh '''
                            docker build -t ${IMAGE_NAME}:${BUILD_NUMBER} .
                            docker tag ${IMAGE_NAME}:${BUILD_NUMBER} ${IMAGE_NAME}:latest
                        '''
                    }
                }
            }
        }
    }
    
    post {
        always {
            cleanWs()
        }
        success {
            echo 'Pipeline LCA-Lite réussi! ✅'
        }
        failure {
            echo 'Pipeline LCA-Lite échoué! ❌'
        }
    }
}

